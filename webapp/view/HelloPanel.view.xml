<mvc:View
	controllerName="demoView.controller.HelloPanel"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Panel
  		headerText="{i18n>helloPanelTitle}"
  		class="sapUiResponsiveMargin"
		width="auto">
			<content>
            <Button 
				text="{i18n>showHelloButtonText}"
				press="onShowHello"
				class="sapUiSmallMarginEnd"/>
		   	<Input
		      	value="{model>/recipient/firstName}"
		      	valueLiveUpdate="true"
		      	width="15%"
				class="sapUiSmallMarginEnd"/>
	   		<Input
		      	value="{model>/recipient/lastName}"
		      	valueLiveUpdate="true"
		      	width="15%"
				class="sapUiSmallMarginEnd"/>
		    <Text
				text="Hello {model>/recipient/firstName} {model>/recipient/lastName}"
				class="sapUiSmallMargin"/>
  		</content>
	</Panel>
</mvc:View>